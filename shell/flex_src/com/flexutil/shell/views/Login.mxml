<?xml version="1.0" encoding="utf-8"?>
<s:Panel xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx"
		 title="Login" resizeEffect="{resize}">
	<fx:Declarations>
		<fx:String id="error"/>
		<mx:Resize duration="750" id="resize" target="{this}" />
	</fx:Declarations>
	
	<fx:Script>
		<![CDATA[
			import com.flexutil.shell.events.LoginEvent;
			import com.flexutil.shell.vo.LogonUser;
			
			import mx.controls.Alert;
			
			private function tryLogin():void {
				var user:LogonUser = new LogonUser();
				
					user.userName = userName.text;
					user.orclPassword = password.text;
				
				var loginEvent:LoginEvent = new LoginEvent(LoginEvent.LOG_IN);
				loginEvent.user = user;
				dispatchEvent(loginEvent);
			}
			
			private function clear():void
			{
				userName.text = password.text =  error = "";
			}
			
			
		]]>
	</fx:Script>
	
	<s:layout>
		<s:VerticalLayout paddingLeft="15" paddingRight="20" paddingBottom="10" paddingTop="10" 
						  horizontalAlign="center"  />
	</s:layout>
	<s:HGroup width="260">
		<s:Label text="User Name : "  width="110" textAlign="right" verticalCenter="0"/>
		<s:TextInput id="userName" text="test" enter="password.setFocus()" change="error=''" />
	</s:HGroup>
	<s:HGroup width="260">
		<s:Label text="Oracle Password : "  width="110" textAlign="right" />
		<s:TextInput id="password" text="test" displayAsPassword="true" enter="tryLogin()" />
	</s:HGroup>
	
	<s:controlBarContent>
		<s:HGroup width="100%" horizontalAlign="right">
			<s:Button label="Login" click="tryLogin()" enabled="{
					  (userName.text.length>0 &amp;&amp; password.text.length>0)
					  }"/>
			<s:Button label="Clear" click="clear()" enabled="{userName.text.length>0 || password.text.length>0}"/>		
		</s:HGroup>
	</s:controlBarContent>
	
</s:Panel>
